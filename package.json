{
  "name": "todai",
  "version": "1.0.0",
  "description": "Personal task management application",
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm run dev",
    "start:frontend": "cd frontend && pnpm run dev",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && pnpm install && cd ..",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "setup": "npm run docker:up && npm run install:all"
  },
  "keywords": ["task", "management", "react", "express", "postgresql"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
